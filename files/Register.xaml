<Window x:Class="SmartStock.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="250" Width="400">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Register New User" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Username"/>
            <TextBox x:Name="UsernameInput" Margin="0,5"/>

            <TextBlock Text="Password"/>
            <PasswordBox x:Name="PasswordInput" Margin="0,5"/>

            <Button Content="Register" Click="Register_Click" Margin="0,20,0,0" Padding="10"/>
        </StackPanel>
    </Grid>
</Window>
