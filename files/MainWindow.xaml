<Window x:Class="SmartStock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmartStock Login"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#e3f2fd">

    <Grid>
       
        <Border Background="White"
                CornerRadius="20"
                Padding="30"
                Width="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{DynamicResource DropShadow}">
            <StackPanel VerticalAlignment="Center">
                <!-- Title -->
                <TextBlock Text="SmartStock Login"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#1976d2"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

            
                <TextBlock Text="Username:" FontSize="14" Foreground="Gray"/>
                <TextBox x:Name="UsernameBox"
                         Width="300" Height="30"
                         FontSize="14" Margin="0,5,0,15"
                         Padding="5"/>

             
                <TextBlock Text="Password:" FontSize="14" Foreground="Gray"/>
                <PasswordBox x:Name="PasswordBox"
                             Width="300" Height="30"
                             FontSize="14" Margin="0,5,0,15"
                             Padding="5"/>

             
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="LoginButton"
                            Content="Login"
                            Width="120" Height="35"
                            Background="#1976d2"
                            Foreground="White"
                            Margin="0,0,10,0"
                            Click="LoginButton_Click"/>
                    <Button Content="Register"
                            Width="120" Height="35"
                            Background="#e0e0e0"
                            Foreground="Black"
                            Click="OpenRegister_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
